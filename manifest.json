{
  "manifest_version": 3,
  "name": "JetMark",
  "version": "1.0.3",
  "description": "Acceso ultra r√°pido a tus marcadores usando el teclado mediante comandos.",
  "permissions": [
    "bookmarks"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Abrir JetMark"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+B",
        "mac": "Command+Shift+B"
      }
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
